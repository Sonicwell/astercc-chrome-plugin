{
    "name": "__MSG_pluginName__",
    "short_name": "__MSG_pluginShortName__",
    "version": "0.1.0",
    "manifest_version": 2,
    "description": "__MSG_pluginDescription__",
    "default_locale": "en",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"    
    },
    "author": "asterCC",
    "background": {
        "page": "background.html"
    },
    "browser_action": {
        "default_icon": {
            "16": "icon.png",
            "24": "icon.png",
            "32": "icon.png"
